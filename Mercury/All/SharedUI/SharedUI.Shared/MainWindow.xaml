<?xml version='1.0' encoding='utf-8' ?>
<Window x:Class="SharedUI.Shared.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Elements Shared UI Sample" Height="300" Width="300"
	>
  <StackPanel Orientation="Vertical" Margin="10">
	<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
		<TextBox Text="{Binding valueA}" Width="100"/>
		<Label> + </Label>
		<TextBox Text="{Binding valueB}" Width="100"/>
	</StackPanel>
	<Button Click="CalculateResult_Click" Margin="0,10,0,10">Calculate Result</Button>
	<Label Content="Result is" HorizontalAlignment="Center"/>
	<Label Content="{Binding result}" FontWeight="Bold" HorizontalAlignment="Center"/>
  </StackPanel>
</Window>